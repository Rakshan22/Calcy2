MainWidget:

<MainWidget>:
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id:input
            text:"0"
            halign:"right"
            font_size: "60"
            size_hint: (1, .20)

        GridLayout:
            cols:4
            rows:5

            Button:
                size_hint:(.15, .15)
                font_name: "fonts/Roboto-Black.ttf"
                font_size:25
                text:"<-"
                background_color: (1,2,3,5)
                on_press:root.back()
            Button:
                size_hint:(.15, .15)
                font_name: "fonts/Roboto-Black.ttf"
                font_size:25
                text:"C"
                background_color: (1,2,3,5)
                on_press:root.clear()
            Button:
                size_hint:(.15, .15)
                font_name: "fonts/Roboto-Black.ttf"
                font_size:25
                text:"x[sup]2[/sup]"
                markup:True
                background_color: (1,2,3,5)
                on_press:root.pressed('**')
            Button:
                size_hint:(.15, .15)
                font_name: "fonts/Roboto-Black.ttf"
                font_size:25
                text:"/"
                on_press:root.pressed('/')

            Button:
                size_hint:(.15, .15)
                font_name: "fonts/Roboto-Black.ttf"
                font_size:25
                text:"7"
                background_color:(100/200, 100/200, 100/200, 1)
                on_press:root.pressed(7)
            Button:
                size_hint:(.15, .15)
                font_name: "fonts/Roboto-Black.ttf"
                font_size:25
                text:"8"
                background_color:(100/200, 100/200, 100/200, 1)
                on_press:root.pressed(8)
            Button:
                size_hint:(.15, .15)
                font_name: "fonts/Roboto-Black.ttf"
                font_size:25
                text:"9"
                background_color:(100/200, 100/200, 100/200, 1)
                on_press:root.pressed(9)
            Button:
                size_hint:(.15, .15)
                font_name: "fonts/Roboto-Black.ttf"
                font_size:25
                text:"X"
                on_press:root.pressed('*')

            Button:
                size_hint:(.15, .15)
                font_name: "fonts/Roboto-Black.ttf"
                font_size:25
                text:"4"
                background_color:(100/200, 100/200, 100/200, 1)
                on_press:root.pressed(4)
            Button:
                size_hint:(.15, .15)
                font_name: "fonts/Roboto-Black.ttf"
                font_size:25
                text:"5"
                background_color:(100/200, 100/200, 100/200, 1)
                on_press:root.pressed(5)
            Button:
                size_hint:(.15, .15)
                font_name: "fonts/Roboto-Black.ttf"
                font_size:25
                text:"6"
                background_color:(100/200, 100/200, 100/200, 1)
                on_press:root.pressed(6)
            Button:
                size_hint:(.15, .15)
                font_name: "fonts/Roboto-Black.ttf"
                font_size:25
                text:"-"
                on_press:root.pressed('-')

            Button:
                size_hint:(.15, .15)
                font_name: "fonts/Roboto-Black.ttf"
                font_size:25
                text:"1"
                background_color:(100/200, 100/200, 100/200, 1)
                on_press:root.pressed(1)
            Button:
                size_hint:(.15, .15)
                font_name: "fonts/Roboto-Black.ttf"
                font_size:25
                text:"2"
                background_color:(100/200, 100/200, 100/200, 1)
                on_press:root.pressed(2)
            Button:
                size_hint:(.15, .15)
                font_name: "fonts/Roboto-Black.ttf"
                font_size:25
                text:"3"
                background_color:(100/200, 100/200, 100/200, 1)
                on_press:root.pressed(3)
            Button:
                size_hint:(.15, .15)
                font_name: "fonts/Roboto-Black.ttf"
                font_size:25
                text:"+"
                on_press:root.pressed('+')

            Button:
                size_hint:(.15, .15)
                font_name: "fonts/Roboto-Black.ttf"
                font_size:25
                text:"0"
                background_color:(100/200, 100/200, 100/200, 1)
                on_press:root.pressed(0)
            Button:
                size_hint:(.15, .15)
                font_name: "fonts/Roboto-Black.ttf"
                font_size:25
                text:"."
                background_color:(100/200, 100/200, 100/200, 1)
                on_press:root.pressed('.')
            Button:
                size_hint:(.15, .15)
                font_name: "fonts/Roboto-Black.ttf"
                font_size:25
                text:"="
                background_color: (1,3,1,1)
                on_press:root.answer()
            Button:
                size_hint:(.15, .15)
                font_name: "fonts/Roboto-Black.ttf"
                font_size:25
                text:"//"
                on_press:root.pressed('//')










